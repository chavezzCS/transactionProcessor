generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id        String   @id @default(uuid())
  balance   Decimal
  currency  String
  payments  Payment[]
}

model Merchant {
  id        String   @id @default(uuid())
  balance   Decimal
  currency  String
  payments  Payment[]
}

model Payment {
  id          String   @id @default(uuid())
  paymentId   String   @unique
  amount      Decimal
  currency    String
  status      String
  createdAt   DateTime @default(now())

  accountId   String
  merchantId  String

  account     Account  @relation(fields: [accountId], references: [id])
  merchant    Merchant @relation(fields: [merchantId], references: [id])
}